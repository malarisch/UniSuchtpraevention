{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "bundler",
        "esModuleInterop": false,
        "outDir": "./dist",
        "strict": true,
        "baseUrl": "./",
        "resolveJsonModule": true,
        "allowJs": true,
        "skipLibCheck": true,
        "allowImportingTsExtensions": true,
 //       "emitDeclarationOnly": true,
        "noEmit": true,
//        "moduleSuffixes": [""],
        "paths": {
        "@suchtModules/*": [
            "./src/modules/*",
        
        ],
    },
    },
    
    "include": ["src/**/*"],
    "exclude": [
        "node_modules/*"
    ],
    "ts-node": {
        "transpileOnly": false,
        "files": true
    },
    
}