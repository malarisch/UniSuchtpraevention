# ─────────────────────────────────────────────
# Server
# ─────────────────────────────────────────────
PORT=8080
LOGGER_APP_NAME=webserver
LOG_LEVEL=info

# Auf true setzen, um Logs lokal in der Konsole auszugeben
# (statt an Loki zu senden). Nützlich für lokale Entwicklung.
LOGGING_LOCAL=false

# ─────────────────────────────────────────────
# Redis
# ─────────────────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379

# ─────────────────────────────────────────────
# PostgreSQL
# ─────────────────────────────────────────────
PG_HOST=localhost
PG_USER=postgres
PG_PASSWORD=postgres
PG_DB=suchtpraevention

# ─────────────────────────────────────────────
# Monitoring – Loki (Log-Aggregation)
# ─────────────────────────────────────────────
LOKI_URL=http://localhost:3100
# Format: Authorization=Basic <base64-encoded credentials>
LOKI_HEADERS=Authorization=Basic changeme

# ─────────────────────────────────────────────
# Monitoring – InfluxDB (Metriken)
# ─────────────────────────────────────────────
INFLUXDB_HOST=http://localhost:8181
INFLUXDB_DATABASE=sucht
INFLUXDB_TOKEN=dev-token

# ─────────────────────────────────────────────
# API-Schlüssel – Genius (Lyricsquelle)
# ─────────────────────────────────────────────
GENIUS_CLIENT_ACCESS_TOKEN=your-genius-client-access-token

# ─────────────────────────────────────────────
# API-Schlüssel – OpenAI (KI-Analyse)
# ─────────────────────────────────────────────
OPENAI_KEY=your-openai-api-key

# ─────────────────────────────────────────────
# API-Schlüssel – Spotify (Song- und Künstlersuche)
# ─────────────────────────────────────────────
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret

# ─────────────────────────────────────────────
# Ollama (lokales LLM)
# ─────────────────────────────────────────────
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=gpt-oss-20b
